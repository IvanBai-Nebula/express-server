# 生产环境配置

# 服务器配置
PORT=8080
NODE_ENV=production

# 数据库配置
DB_HOST=production-db-host
DB_USER=production-db-user
DB_PASSWORD=strong-production-password
DB_NAME=medical_platform_prod
DB_DIALECT=mysql

# JWT配置 - 生产环境必须使用强随机密钥
JWT_SECRET=replace_with_very_strong_random_key_min_64_chars
REFRESH_SECRET=replace_with_different_very_strong_random_key_min_64_chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS配置 - 生产环境仅允许特定域名
CORS_ORIGIN=https://yourproductiondomain.com

# Redis配置 - 使用提供的Redis信息，生产DB
REDIS_HOST=ivan.black
REDIS_PORT=6379
REDIS_DB=15
REDIS_PASSWORD=
REDIS_PREFIX=prod_token_blacklist:

# 邮件配置
MAIL_HOST=smtp.production-mail-service.com
MAIL_PORT=587
MAIL_USER=noreply@yourproductiondomain.com
MAIL_PASSWORD=strong-mail-password
MAIL_FROM=noreply@yourproductiondomain.com