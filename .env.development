# 开发环境配置

# 服务器配置
PORT=8080
NODE_ENV=development

# 数据库配置
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=password
DB_NAME=medical_platform_dev
DB_DIALECT=mysql

# JWT配置 - 开发环境可以使用固定密钥
JWT_SECRET=dev_jwt_secret_key_only_for_local_development
REFRESH_SECRET=dev_refresh_secret_key_only_for_local_development
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS配置 - 开发环境允许所有来源
CORS_ORIGIN=*

# Redis配置 - 使用提供的Redis信息
REDIS_HOST=ivan.black
REDIS_PORT=6379
REDIS_DB=1
